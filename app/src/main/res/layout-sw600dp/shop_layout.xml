<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:background="@drawable/shop_back"
    tools:context=".Shop"
    >


<TextView
    android:layout_width="300dp"
    android:layout_height="150dp"
    android:layout_marginTop="10dp"
    android:layout_toLeftOf="@+id/dollarsAmount"
    ></TextView>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="380dp"
        android:layout_marginTop="190dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/shop_rack"
        android:scaleX="1.1"
        >





        <LinearLayout
            android:id="@+id/lineUp"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="80dp"


            >


            <ImageView
                android:id="@+id/card1image"
                android:layout_width="150dp"
                android:layout_height="90dp"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="20dp"
                android:onClick="clickCard1"
                >
            </ImageView>
            <TextView
                android:id="@+id/card1text"
                style="@style/PriceDollarsStyle"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="200$"
                ></TextView>

            <ImageView
                android:id="@+id/card2image"
                android:layout_width="150dp"
                android:layout_height="90dp"

                android:onClick="clickCard2"

                >
            </ImageView>
            <TextView
                android:id="@+id/card2text"
                style="@style/PriceDollarsStyle"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="200$"
                ></TextView>


            <ImageView
                android:id="@+id/card3image"
                android:layout_width="150dp"
                android:layout_height="90dp"
                android:onClick="clickCard3"
                >
            </ImageView>
            <TextView
                android:id="@+id/card3text"
                style="@style/PriceDollarsStyle"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="200$"
                ></TextView>




        </LinearLayout>

        <LinearLayout
            android:id="@+id/line2"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="338dp"


            >


            <ImageView
                android:id="@+id/card4image"
                android:layout_width="150dp"
                android:layout_height="90dp"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="20dp"
                android:onClick="clickCard4"

                >
            </ImageView>

            <TextView
                android:id="@+id/card4text"
                style="@style/PriceDollarsStyle"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="200$"


                ></TextView>

            <ImageView
                android:id="@+id/card5image"
                android:layout_width="150dp"
                android:layout_height="90dp"
                android:onClick="clickCard5"
                >
            </ImageView>

            <TextView
                android:id="@+id/card5text"
                style="@style/PriceDollarsStyle"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="200$"
                ></TextView>


            <ImageView
                android:id="@+id/card6image"
                android:layout_width="150dp"
                android:layout_height="90dp"
                android:onClick="clickCard6"
                >
            </ImageView>

            <TextView
                android:id="@+id/card6text"
                style="@style/PriceDollarsStyle"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="200$"
                ></TextView>




        </LinearLayout>

    </RelativeLayout>

    <ImageButton
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/button_exit"
        android:onClick="backToLobby"

        ></ImageButton>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/oval"
        android:textColor="@android:color/holo_green_light"
        android:textSize="32sp"
        android:text="->"
        android:onClick="increaseShopPage"

        ></Button>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="#f5e7cc"
        android:textColor="@android:color/holo_green_light"
        android:textSize="32sp"
        android:text="go left"
        android:onClick="decreaseShopPage"
        ></Button>

    <TextView
        style="@style/PriceDollarsStyle"
        android:id="@+id/dollarsAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0 $"
        android:layout_alignParentRight="true"
        android:layout_margin="50dp"
        android:background="@drawable/oval"

        ></TextView>


</RelativeLayout>














